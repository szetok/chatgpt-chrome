{
  "manifest_version": 3,
  "name": "ChatGPT Extension",
  "version": "1.0",
  "description": "Send a message to ChatGPT using OpenAI API",
  "icons": {
    "32": "src/assets/icon32.png"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "32": "src/assets/icon32.png"
    }
  }
}
